<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('head') %>
</head>

<body>
  <div class="container">
    <div className="vw-100 vh-100 bg-light d-flex justify-content-center align-items-center">
      <div className="form bg-white h-50 w-50 rounded p-1">
        <form className="d-flex justify-content-center align-items-center flex-column h-100 w-100" action="/api/user/register" method="POST">
          <div className="form-group">
            <label htmlFor="name">Name:</label>
            <input type="text" className="form-control" name="name" id="name" placeholder="Name" />
          </div>
          <div className="form-group">
            <label htmlFor="email">Email:</label>
            <input type="email" className="form-control" name="email" id="email" placeholder="Email" />
          </div>
          <div className="form-group">
            <label htmlFor="password">Password:</label>
            <input type="password" className="form-control" name="password" id="password" placeholder="Password" />
          </div>

          <br />
          <button type="submit" className="btn btn-primary">
            Register
          </button>
        </form>
      </div>
    </div>

  </div>
</body>

</html>